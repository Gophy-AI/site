<section id="features" class="py-20">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
        Features
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Everything you need for smarter meetings
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature) => (
        <div class:list={['card p-6', { 'opacity-60': feature.comingSoon }]}>
          <div class="flex items-start justify-between mb-4">
            <div class="w-10 h-10 rounded-lg bg-secondary flex items-center justify-center shrink-0">
              <svg class="w-5 h-5 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <Fragment set:html={icons[feature.icon]} />
              </svg>
            </div>
            {feature.comingSoon && (
              <span class="badge text-xs">Coming Soon</span>
            )}
          </div>
          <h3 class="font-semibold text-foreground mb-2">{feature.title}</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
