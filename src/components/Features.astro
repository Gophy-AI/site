---
const features = [
  {
    title: 'Real-Time Suggestions',
    description: 'Get contextual talking points and responses as the conversation unfolds. Never be caught off guard.',
    icon: 'lightbulb',
  },
  {
    title: 'Objection Handling',
    description: 'Receive instant strategies when prospects raise concerns. Turn objections into opportunities.',
    icon: 'shield',
  },
  {
    title: 'Technical Accuracy',
    description: 'Pull from your product knowledge base for accurate technical details. Build trust with precision.',
    icon: 'book',
  },
  {
    title: 'Privacy First',
    description: 'Audio is processed in real-time and never stored. You control when the assistant is active.',
    icon: 'lock',
  },
]

const icons: Record<string, string> = {
  lightbulb: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>',
  shield: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>',
  book: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>',
  lock: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>',
}
---

<section id="features" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Features Built for Sales Professionals
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Everything you need to have more confident, effective sales conversations.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature) => (
        <div class="bg-white p-6 rounded-2xl shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <Fragment set:html={icons[feature.icon]} />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">{feature.title}</h3>
          <p class="text-gray-600 leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
