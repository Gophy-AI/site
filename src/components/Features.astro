---
const features = [
  {
    title: 'Real-Time Suggestions',
    description: 'Get contextual talking points and objection handlers as the conversation unfolds. Never be caught off guard.',
    icon: 'lightbulb',
  },
  {
    title: 'Meeting Preparation',
    description: 'Automated research on prospects: tech stack, industry, past deals. Get briefings before every call.',
    icon: 'clipboard',
  },
  {
    title: 'Knowledge Graph',
    description: 'Your product knowledge, docs, and specs organized for instant retrieval during calls.',
    icon: 'graph',
  },
  {
    title: 'Auto Demo Generation',
    description: 'After calls, AI generates working demos tailored to prospect needs. They can try it the same day.',
    icon: 'code',
  },
  {
    title: 'Smart Integrations',
    description: 'Connect with your CRM, dashboards, and existing workflows. Per-client analysis out of the box.',
    icon: 'workflow',
  },
  {
    title: 'Privacy First',
    description: 'Audio processed in real-time and never stored. You control when the assistant is active.',
    icon: 'lock',
  },
]

const icons: Record<string, string> = {
  lightbulb: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>',
  clipboard: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>',
  graph: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>',
  code: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>',
  workflow: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>',
  lock: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>',
}
---

<section id="features" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Built for Technical Sales
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Before, during, and after every call. From briefing to working demo.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="bg-white p-6 rounded-2xl shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 bg-brand-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <Fragment set:html={icons[feature.icon]} />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">{feature.title}</h3>
          <p class="text-gray-600 leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
