---
const steps = [
  {
    number: '01',
    title: 'Before the Meeting',
    description: 'Calendar synced. 30 min before, you get a briefing with past discussions, open items, and relevant context.',
    icon: 'calendar',
  },
  {
    number: '02',
    title: 'During the Meeting',
    description: 'As topics come up, context appears automatically. Past decisions, documents, people - right when needed.',
    icon: 'chat',
  },
  {
    number: '03',
    title: 'After the Meeting',
    description: 'Decisions captured, action items assigned, summary sent. Knowledge stored for the next meeting.',
    icon: 'check',
  },
]

const icons: Record<string, string> = {
  calendar: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>',
  chat: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>',
  check: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>',
}
---

<section id="how-it-works" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        How It Works
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Your copilot handles the context. You focus on the conversation.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 items-stretch">
      {steps.map((step, index) => (
        <div class="relative flex">
          {index < steps.length - 1 && (
            <div class="hidden md:block absolute top-16 left-1/2 w-full h-0.5 bg-brand-200" />
          )}
          <div class="relative bg-white p-8 rounded-2xl shadow-sm text-center flex flex-col w-full">
            <div class="w-16 h-16 bg-brand-500 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={icons[step.icon]} />
              </svg>
            </div>
            <span class="text-sm font-bold text-brand-500 tracking-wider">{step.number}</span>
            <h3 class="text-xl font-semibold text-gray-900 mt-2 mb-3">{step.title}</h3>
            <p class="text-gray-600 leading-relaxed flex-grow">{step.description}</p>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center">
      <a
        href="https://chrome.google.com/webstore"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center gap-2 bg-brand-500 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-brand-600 transition-colors shadow-lg shadow-brand-500/25"
      >
        Get Started Free
      </a>
    </div>
  </div>
</section>
