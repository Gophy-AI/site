---
const steps = [
  {
    number: '01',
    title: 'Before the Call',
    description: 'Get automated briefings on your prospect: their tech stack, industry context, and past interactions. Walk into every call prepared.',
    icon: 'clipboard',
  },
  {
    number: '02',
    title: 'During the Call',
    description: 'Real-time AI suggestions based on conversation context. Objection handlers, technical details, and talking points appear as you need them.',
    icon: 'chat',
  },
  {
    number: '03',
    title: 'After the Call',
    description: 'AI generates working demo code tailored to the prospect\'s requirements. They can deploy it the same day. You follow up with something real.',
    icon: 'code',
  },
]

const icons: Record<string, string> = {
  clipboard: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>',
  chat: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>',
  code: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>',
}
---

<section id="how-it-works" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        How It Works
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        From preparation to working demo in three steps.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {steps.map((step, index) => (
        <div class="relative">
          {index < steps.length - 1 && (
            <div class="hidden md:block absolute top-16 left-1/2 w-full h-0.5 bg-blue-200" />
          )}
          <div class="relative bg-white p-8 rounded-2xl shadow-sm text-center">
            <div class="w-16 h-16 bg-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={icons[step.icon]} />
              </svg>
            </div>
            <span class="text-sm font-bold text-blue-600 tracking-wider">{step.number}</span>
            <h3 class="text-xl font-semibold text-gray-900 mt-2 mb-3">{step.title}</h3>
            <p class="text-gray-600 leading-relaxed">{step.description}</p>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center">
      <a
        href="https://chrome.google.com/webstore"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center gap-2 bg-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors shadow-lg shadow-blue-600/25"
      >
        Get Started Free
      </a>
    </div>
  </div>
</section>
