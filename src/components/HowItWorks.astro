<section id="how-it-works" class="py-20 bg-background">
  <div class="max-w-2xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
        How It Works
      </h2>
      <p class="text-lg text-muted-foreground">
        From download to insight in minutes
      </p>
    </div>

    <div class="relative">
      {steps.map((step, index) => (
        <div class="relative flex items-start gap-6 pb-12 last:pb-0">
          {/* Vertical connecting line */}
          {index < steps.length - 1 && (
            <div
              class="absolute left-5 top-10 bottom-0 border-l-2 border-border"
              aria-hidden="true"
            />
          )}

          {/* Number circle */}
          <div class="relative z-10 flex-shrink-0 w-10 h-10 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-semibold text-sm">
            {step.number}
          </div>

          {/* Content */}
          <div class="pt-1">
            <h3 class="text-lg font-semibold text-foreground mb-2">
              {step.title}
            </h3>
            <p class="text-muted-foreground leading-relaxed">
              {step.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center">
      <a
        href="https://github.com/gophy-ai/desktop/releases/latest"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary text-base px-8 py-3"
      >
        Download for macOS
      </a>
    </div>
  </div>
</section>
