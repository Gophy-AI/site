<script>
  const couponBtn = document.getElementById('coupon-code');
  const originalText = couponBtn?.textContent;

  couponBtn?.addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText('LAUNCH29');
      if (couponBtn) {
        couponBtn.textContent = 'Copied!';
        setTimeout(() => {
          couponBtn.textContent = originalText || 'LAUNCH29';
        }, 1500);
      }
    } catch {
      // Fallback for older browsers
      const textArea = document.createElement('textarea');
      textArea.value = 'LAUNCH29';
      document.body.appendChild(textArea);
      textArea.select();
      document.execCommand('copy');
      document.body.removeChild(textArea);
      if (couponBtn) {
        couponBtn.textContent = 'Copied!';
        setTimeout(() => {
          couponBtn.textContent = originalText || 'LAUNCH29';
        }, 1500);
      }
    }
  });
</script>
